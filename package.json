{
  "name": "@makeomatic/deploy",
  "version": "0.0.0-development",
  "description": "Common build and deploy tasks wrapped in a cli",
  "main": "./bin/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/deploy"
  },
  "author": "Vitaly Aminev <v@makeomatic.ca>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./bin",
    "test": "yarn lint && ./bin/cli.js test run",
    "postinstall": "node ./scripts/setup-semantic-release.js",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "engine": {
    "node": ">= 12.15.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-strict-mode": "^7.12.13",
    "codecov": "^3.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-config-makeomatic": "^5.0.4",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "jest": "^27.4.3",
    "tempy": "^1.0.0"
  },
  "dependencies": {
    "@commitlint/cli": "^15.0.0",
    "bluebird": "^3.7.2",
    "chrome-launcher": "^0.15.0",
    "chrome-remote-interface": "^0.31.1",
    "death": "^1.1.0",
    "find-up": "^5.0.0",
    "glob": "^7.1.6",
    "husky": "~7.0.4",
    "hyperid": "^2.1.0",
    "is": "^3.2.1",
    "js-yaml": "^4.0.0",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.2",
    "lodash.set": "^4.3.2",
    "ms-conf": "^7.0.2",
    "npm-path": "^2.0.4",
    "pino": "^7.5.1",
    "read-pkg": "^5.2.0",
    "rimraf": "^3.0.2",
    "semantic-release": "18.0.1",
    "shelljs": "^0.8.3",
    "strip-final-newline": "=2.x.x",
    "yargs": "^17.3.0"
  },
  "bin": {
    "mdep": "./bin/cli.js"
  },
  "peerDependencies": {
    "cross-env": ">= 6.0.0"
  },
  "files": [
    "bin/",
    "templates/",
    "scripts/",
    ".husky/*",
    "!.husky/_",
    ".releaserc.json",
    ".commitlintrc.js"
  ],
  "jest": {
    "testURL": "http://tester.local"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./node_modules/@makeomatic/deploy/git-hooks/prepare-commit-msg $HUSKY_GIT_PARAMS"
    }
  }
}
