{
  "nycCoverage": false,
  "test_framework": "jest --coverage --coverageDirectory <coverageDirectory> --runTestsByPath --maxWorkers=50% --verbose --colors",
  "tests": "__tests__/*.js",
  "auto_compose": true,
  "node": "16",
  "tester_flavour": "chrome-tester",
  "services": [
    "redisSentinel",
    "redisCluster",
    "rabbitmq",
    "postgres",
    "elasticsearch",
    "cassandra",
    "couchdb"
  ],
  "extras": {
    "tester": {
      "shm_size": "128m",
      "environment": {
        "CHROME_PATH": "/usr/bin/chromium-browser",
        "DEBUG": "${DEBUG:-''}"
      },
      "volumes": [
        "${YARN_CACHE_FOLDER:-$HOME/.cache/yarn}:/tmp/yarn-cache:ro"
      ]
    }
  },
  "arbitrary_exec": [
    "apk add git"
  ]
}
